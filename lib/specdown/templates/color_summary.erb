<% runners.map(&:stats).each do |stat| %>
<% stat.exceptions.each do |e| %>
<%= "In #{e.test_filename}".blue.bold %>: <%= "#<#{e.exception_class}>:".red.bold%> <%=e.exception_message%>
<%= e.exception_backtrace.join("\n").red %>
<% end %>
<% end %>
